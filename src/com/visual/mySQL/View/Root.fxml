<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visual.mySQL.Controller.RootController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: red;">
         <children>
            <TextField fx:id="textUsuario" layoutX="50.0" layoutY="223.0" prefHeight="26.0" prefWidth="200.0" promptText="Usuario" />
            <PasswordField fx:id="textPassword" layoutX="50.0" layoutY="266.0" prefHeight="26.0" prefWidth="200.0" promptText="Contraseña" />
            <Button fx:id="iniciarSesion" layoutX="25.0" layoutY="340.0" mnemonicParsing="false" onMouseClicked="#botonIniciarSesionOnMouseClicked" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: yellow;" text="Iniciar Sesión" />
            <Button fx:id="salir" layoutX="175.0" layoutY="340.0" mnemonicParsing="false" onMouseClicked="#botonSalirOnMouseClicked" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: yellow;" text="Salir" />
            <Label fx:id="logo" alignment="CENTER" contentDisplay="CENTER" layoutX="75.0" layoutY="160.0" prefHeight="30.0" prefWidth="150.0" text="Games &amp; More!" textFill="YELLOW">
               <font>
                  <Font name="Gill Sans MT Italic" size="24.0" />
               </font>
            </Label>
            <ImageView fx:id="imagenLogo" fitHeight="140.0" fitWidth="150.0" layoutX="75.0" layoutY="20.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelError" layoutX="20.0" layoutY="191.0" prefHeight="18.0" prefWidth="260.0" textFill="WHITE" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
